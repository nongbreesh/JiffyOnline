@{
    Layout = "~/Views/Shared/_ProfileLayout.cshtml";
}


<div class="wishlist">
    <table class="cart" style="width: 785px;margin-top:0px;">
        <tr class="head">
            <td >รายการ</td>
            <td>ราคา</td>
            <td>จำนวน</td>
            <td>สถานะ</td>
        </tr>

        @if (ViewBag.Wisjlist != null)
        {

            foreach (var item in ViewBag.Wisjlist)
            {
                <tr class="items">

                    <td class="head">
                        <div class="img">
                            <a href="Item/Detail/@item.ID"><img src="@item.IMAGESDisplay" /></a>
                        </div>
                        <div class="desc">
                            <h2>@item.NAME_EN</h2>
                            <p>@item.SHORT_DESCR_EN</p>

                        </div>
                        <span class="status">สถานะ: พร้อมจัดส่งภายใน 3-6 วัน </span>
                    </td>
                    <td>
                        @if (item.OLD_PRICE != null)
                        {
                            <p class="price"><strike>@item.OLD_PRICE.ToString("#,##.00") Bath</strike></p>
                            <p class="price" style="color: #F00; font-size: 17px;">@item.PRICE.ToString("#,##.00") Bath</p>
                        }
                        else
                        {
                            <p class="price">@item.PRICE.ToString("#,##.00") Bath</p>
                        }
                    </td>
                    <td style="vertical-align: middle;">1</td>
                    <td style="vertical-align: middle;"><font color="green" style="font-size: 13px;
font-family: inherit;">กำลังจัดส่ง</font></td>
                </tr>
            }
        }


    </table>



</div>