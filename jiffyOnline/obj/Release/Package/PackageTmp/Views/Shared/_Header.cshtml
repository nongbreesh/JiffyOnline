<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="/Content/bootstrap.css" rel="stylesheet" />
    <link href="/Content/cloud-zoom.css" rel="stylesheet" />
    <link href="/Content/bjqs.css" rel="stylesheet" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="http://code.jquery.com/jquery-latest.min.js"></script>
    <script type="text/javascript">jQuery.noConflict();</script>
    @Scripts.Render("~/Scripts/jquery-1.8.2.min.js")
    @Scripts.Render("~/Scripts/bootstrap.js")
    @Scripts.Render("~/Scripts/bootstrap.min.js")
    @Scripts.Render("~/Scripts/cloud-zoom.1.0.2.min.js")
      @Scripts.Render("~/Scripts/bjqs-1.3.js")

</head>
<body>
    <div class="ofwrapper">
        <header class="header">
            <div class="topnav">
                <ul>

                    @if (ViewBag.CustomerDetail != null)
                    {
                        <li>
                            <img src="~/Content/img/icon/login.png" style="margin-right: 5px; top: -2px; " />Welcome
                            <a href="/Home/Profile">
                                @(ViewBag.CustomerDetail.FNAME + " " + ViewBag.CustomerDetail.LNAME)
                            </a>
                            <a href="/Home/Logout">@Html.Label("Log-Out", new { Style = "cursor:pointer;" })</a>
                        </li>
                    }
                    else
                    {
                        <li >
                            <img src="~/Content/img/icon/login.png" style="margin-right: 5px; top: -2px;" />
                            <a href="/Home/Login">  @Html.Label("Welcome Log-in", new { Style = "cursor:pointer;" })</a>
                        </li>
                    }

                    <li>
                        <img src="~/Content/img/icon/myaccount.png" style="margin-right: 5px; top: -2px;" />My Account
                    </li>
                    @if (ViewBag.OrderDetail != null)
                    {
                        ViewBag.Bags = ViewBag.OrderDetail.Count;
                    }
                    else
                    {
                        ViewBag.Bags = "0";
                    }
                    <li><img src="~/Content/img/icon/cart.png" style="margin-right: 5px; top: -2px;" /><a href="/Cart">My Shopping Bag [@ViewBag.Bags]</a></li>
                </ul>
            </div>
            <div class="menu">
                <img src="~/Content/img/weblogo.png" class="logo" />
                <ul class="menu">

                    <li><a href="/Home/Index">Home</a></li>
                    <li><a href="/Item/ProductCategory">Product Category</a></li>
                    <li><a href="/JiffyProducts">Jiffy Products</a></li>
                    <li><a href="/Content/Promotion">Promotion</a></li>
                    <li><a href="/Home/Register">Register</a></li>
                    <li><a href="/JiffyPoints">Jiffy Points</a></li>
                    <li><a href="/Content/ContactUs">Contact Us</a></li>

                </ul>
            </div>
            <div class="nav alphabic">
                <h1>ALPHABICAL BRAND IDEX</h1>
                <ul>
                    @foreach (var item in ViewBag.ALPHABETINDEX)
                    {
                        <li>@item</li>
                    }
                </ul>
            </div>
        </header>
